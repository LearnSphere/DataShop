    <class name="edu.cmu.pslc.datashop.discoursedb.item.DiscourseRelationItem" table="discourse_relation">
        <id name="id" type="long">
          <column name="id_discourse_relation" />
          <generator class="native" />
        </id>
        <property name="created" type="timestamp">
          <column name="entity_created" length="19"/>
        </property>
        <property name="modified" type="timestamp">
          <column name="entity_modified" length="19"/>
        </property>
        <property name="discourseRelationType" type="string">
          <column name="type" length="255" />
        </property>
        <property name="endTime" type="timestamp">
          <column name="end_time" length="19"/>
        </property>
        <property name="startTime" type="timestamp">
          <column name="start_time" length="19"/>
        </property>
        <property name="version" type="long">
          <column name="entity_version" length="20"/>
        </property>
        <property name="sourceId" type="long">
          <column name="source_id" length="20"/>
        </property>
        <many-to-one name="source" class="edu.cmu.pslc.datashop.discoursedb.item.ContributionItem">
            <column name="fk_source" />
        </many-to-one>
        <many-to-one name="target" class="edu.cmu.pslc.datashop.discoursedb.item.ContributionItem">
            <column name="fk_target" />
        </many-to-one>

    </class>
</hibernate-mapping>
