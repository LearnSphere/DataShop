    <class name="edu.cmu.pslc.datashop.item.DatasetLevelEventItem" table="dataset_level_event">
        <meta attribute="class-description">Represents a DatasetLevelEvent in the system.</meta>

        <id name="id" type="long">
            <meta attribute="field-description">Database generated unique id.</meta>
            <column name="dataset_level_event_id" />
            <generator class="native" />
        </id>

        <property name="startTime" type="timestamp">
            <meta attribute="field-description">The start time field of this DatasetLevelEvent.</meta>
            <column name="start_time" length="19" not-null="true"/>
        </property>

        <property name="startTimeMS" type="integer">
            <meta attribute="field-description">Start Time Milliseconds for this DatasetLevelEvent.</meta>
            <column name="start_time_ms" />
        </property>

        <property name="eventFlag" type="edu.cmu.pslc.datashop.type.hibernate.EventFlagHibernateType">
            <meta attribute="field-description">The event flag.</meta>
            <column name="event_flag" not-null="true" />
        </property>

        <property name="eventType" type="string">
            <meta attribute="field-description">The event type.</meta>
            <column name="event_type" not-null="true" />
        </property>
        
        <property name="levelView" type="integer">
            <column name="level_view" />
        </property>
        
        <many-to-one name="session" class="edu.cmu.pslc.datashop.item.SessionItem">
            <meta attribute="field-description">Session associated with this item.</meta>
            <column name="session_id" not-null="true" />
        </many-to-one>
        
        <many-to-one name="datasetLevel" class="edu.cmu.pslc.datashop.item.DatasetLevelItem">
            <meta attribute="field-description">DatasetLevel associated with this item.</meta>
            <column name="dataset_level_id" not-null="true" />
        </many-to-one>
        
    </class>
</hibernate-mapping>
